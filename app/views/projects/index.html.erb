<div class="container mt-5">
  <div class="row">
    <div class="col-md-12">
      <h1>Projects</h1>

      <% if admin? %>
        <div class="mb-3">
          <%= link_to 'New Project', new_admin_project_path, class: 'btn btn-primary' %>
        </div>
      <% end %>

      <div class="row">
        <% @projects.each do |project| %>
          <div class="col-md-4">
            <div class="card mb-4">
              <% if project.image.attached? %>
                <%= image_tag project.image, class: 'card-img-top' %>
              <% end %>
              <div class="card-body">
                <h5 class="card-title"><%= project.title %></h5>
                <p class="card-text"><%= truncate(project.content, length: 100) %></p>
                <p class="card-text"><strong>Technology:</strong> <%= project.technology.name %></p>
                <%= link_to 'View Project', project_path(project), class: 'btn btn-secondary' %>
              </div>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
