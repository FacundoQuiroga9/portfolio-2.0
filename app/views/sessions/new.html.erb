<div class="container mt-5">
  <div class="card custom-card">
    <div class="card-body">
      <h2 class="card-title text-white">Admin Login</h2>
      <%= form_with url: login_path, local: true do |form| %>
        <div class="mb-4">
          <%= form.label :username, class: 'form-label text-white' %>
          <%= form.text_field :username, class: 'form-control custom-input' %>
        </div>

        <div class="mb-4">
          <%= form.label :password, class: 'form-label text-white' %>
          <%= form.password_field :password, class: 'form-control custom-input' %>
        </div>

        <div class="d-grid">
          <%= form.submit "Log in", class: 'btn btn-primary' %>
        </div>
      <% end %>

      <% if flash[:alert] %>
        <div class="alert alert-danger mt-4">
          <%= flash[:alert] %>
        </div>
      <% end %>

      <div class="mt-4">
        <%= link_to 'Back', root_path, class: 'btn btn-secondary' %>
      </div>
    </div>
  </div>
</div>
